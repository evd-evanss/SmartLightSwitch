<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:tag="fragment_gontrole"
    android:id="@+id/tel_controle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bggray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:layout_weight="1"
        android:id="@+id/controle_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/llcadastrar"
        android:background="@color/bggray"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ic_cadastro"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <LinearLayout
            android:layout_weight="40"
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/init_txt"
                android:layout_gravity="center"
                android:text="Cadastre seus cenÃ¡rios na tela Cadastro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>