<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/voltar"
            android:background="@drawable/ic_action_name"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:textColor="#fff"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Instalação"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="316dp">
    <ImageView
        android:src="@drawable/information"
        android:layout_width="match_parent"
        android:layout_height="315dp" />

</LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:text="Recomendações"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#fff"
            android:textSize="11sp"
            android:text="Para maior durabilidade não utilizar seu interruptor com mais de uma lâmpada, este produto foi projetado para ligação de lâmpadas de até 100W, verifique a potência de sua lâmpada antes de instalar."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#fff"
            android:textSize="11sp"
            android:text="Em caso de queda de energia seu interruptor irá esperar sua rede wifi reiniciar para se conectar, mas se mesmo após seu roteador reiniciar o interruptor não responder aos comando enviados pelo app, retire a tampa do interruptor e pressione o botão reset."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.02" />

    </LinearLayout>



</LinearLayout>