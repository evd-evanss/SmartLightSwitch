<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bggray"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.v7.widget.RecyclerView
        android:background="@color/bggray"
        android:gravity="center"
        android:layout_weight="1"
        android:id="@+id/cadastro_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/llcadastrar"
        android:background="@color/bggray"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:id="@+id/imv_light"
            android:layout_gravity="center"
            android:src="@drawable/content_config"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="10dp"
                android:id="@+id/txt_label_cadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Pressione o botao ao lado para cadastrar " />
        </LinearLayout>


        <android.support.design.widget.FloatingActionButton
            android:layout_weight="1"
            android:layout_gravity="top"
            android:id="@+id/fab_cadastro"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
           android:src="@drawable/content_config" />

    </LinearLayout>
</LinearLayout>
